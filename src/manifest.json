{
    "$schema": "https://raw.githubusercontent.com/cezaraugusto/chrome-extension-manifest-json-schema/main/manifest/manifest.schema.v3.json",
    "manifest_version": 3,
    "name": "XFRelay",
    "description": "An extension that bridges Facebook Messenger WS data to other bots",
    "version": "0.0.0-TO.BE.FILLED.ON.BUILD",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "js": [
                "browser-relay.js"
            ],
            "matches": [
                "https://www.messenger.com/*"
            ],
            "run_at": "document_start"
        },
        {
            "js": [
                "browser-main.js"
            ],
            "matches": [
                "https://www.messenger.com/*"
            ],
            "world": "MAIN"
        }
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "externally_connectable"
    ]
}